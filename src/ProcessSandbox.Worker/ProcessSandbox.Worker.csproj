<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net8.0;net10.0</TargetFrameworks>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <PublishReadyToRun>false</PublishReadyToRun> 
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\ProcessSandbox.Abstractions\ProcessSandbox.Abstractions.csproj" />
    <ProjectReference Include="..\ProcessSandbox\ProcessSandbox.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="MessagePack" Version="3.1.4" /> 
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
    <PackageReference Include="MessagePack" Version="3.1.4" /> 
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="10.0.0" />
  </ItemGroup>

<Target Name="AddWorkerAssetsToPackage" BeforeTargets="GenerateNuspec">
    <ItemGroup>
        <Content Include="$(TargetDir)ProcessSandbox.Worker.deps.json" Condition="Exists('$(TargetDir)ProcessSandbox.Worker.deps.json')">
            <Pack>true</Pack>
            <PackageCopyToOutput>true</PackageCopyToOutput>
            <PackagePath>contentFiles/any/any/$(TargetFramework)/%(Filename)%(Extension)</PackagePath>
        </Content>
        <Content Include="$(TargetDir)ProcessSandbox.Worker.runtimeconfig.json" Condition="Exists('$(TargetDir)ProcessSandbox.Worker.runtimeconfig.json')">
            <Pack>true</Pack>
            <PackageCopyToOutput>true</PackageCopyToOutput>
            <PackagePath>contentFiles/any/any/$(TargetFramework)/%(Filename)%(Extension)</PackagePath>
        </Content>
        <Content Include="$(TargetDir)ProcessSandbox.Worker" Condition="Exists('$(TargetDir)ProcessSandbox.Worker')">
            <Pack>true</Pack>
            <PackageCopyToOutput>true</PackageCopyToOutput>
            <PackagePath>contentFiles/any/any/$(TargetFramework)/%(Filename)%(Extension)</PackagePath>
        </Content>
        <Content Include="$(TargetDir)ProcessSandbox.Worker.exe" Condition="Exists('$(TargetDir)ProcessSandbox.Worker.exe')">
            <Pack>true</Pack>
            <PackageCopyToOutput>true</PackageCopyToOutput>
            <PackagePath>contentFiles/any/any/$(TargetFramework)/%(Filename)%(Extension)</PackagePath>
        </Content>
    </ItemGroup>
</Target>
</Project>